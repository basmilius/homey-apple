{
    "type": "mdns-sd",
    "mdns-sd": {
        "name": "_companion-link",
        "protocol": "tcp"
    },
    "id": "{{host}}",
    "conditions": [
        [
            {
                "field": "txt.rpmd",
                "match": {
                    "type": "regex",
                    "value": "AppleTV\\d+,\\d+"
                }
            }
        ]
    ]
}
